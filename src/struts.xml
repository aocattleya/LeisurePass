<!-- 内野  ユーザー情報入力画面へ (home.jsp→遠藤)-->

	<action name="CreateUserAction" class="com.internousdev.leisurepass.action.CreateUserAction" method="execute">
		<result name="success">createUser.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 内野  ユーザー登録内容確認画面へ　入力内容の確認 -->

	<action name="CreateUserConfirmAction" class="com.internousdev.leisurepass.action.CreateUserConfirmAction" method="execute">
		<result name="success">createUserConfirm.jsp</result>
		<result name="error">createUser.jsp</result>
	</action>


<!-- 内野  ユーザー登録完了画面へ 　→完了したらHOMEへ自動遷移 -->

  	<action name="CreateUserCompleteAction" class="com.internousdev.leisurepass.action.CreateUserCompleteAction" method="execute">
		<result name="success">createUserComplete.jsp</result>
		<result name="error">createUser.jsp</result>
	</action>


<!-- 中山  パスワード再設定画面へ　新しいパスワードを入力する (login.jsp→山本久保田) -->

	<action name="ResetPasswordAction" class="com.internousdev.leisurepass.action.ResetPasswordAction" method="execute">
		<result name="success">resetPassword.jsp</result>
		<result name="error">login.jsp</result>
	</action>


<!-- 中山  パスワード再設定確認画面へ　入力内容の確認 -->

	<action name="ResetPasswordConfirmAction" class="com.internousdev.leisurepass.action.ResetPasswordConfirmAction" method="execute">
		<result name="success">resetPasswordConfirm.jsp</result>
		<result name="error">resetPassword.jsp</result>
	</action>


<!-- 中山  パスワード再設定完了画面へ  →完了したらHOMEへ自動遷移 -->

	<action name="ResetPasswordCompleteAction" class="com.internousdev.leisurepass.action.ResetPasswordCompleteAction" method="execute">
		<result name="success">resetPasswordComplete.jsp</result>
		<result name="error">resetPassword.jsp</result>
	</action>


<!-- 横山  商品一覧画面へ -->

  	<action name="ProductListAction" class="com.internousdev.leisurepass.action.ProductListAction" method="execute">
		<result name="success">productList.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 横山  選択した商品の商品詳細画面へ -->

 	<action name="ProductDetailsAction" class="com.internousdev.leisurepass.action.ProductDetailsAction" method="execute">
		<result name="success">productDetails.jsp</result>
		<result name="error">productList.jsp</result>
	</action>


<!-- 伊藤  カートに入れるボタンでカートに追加してカート画面へ (home.jsp→遠藤) -->

	<action name="AddCartAction" class="com.internousdev.leisurepass.action.AddCartAction" method="execute">
		<result name="success">cart.jsp</result>
		<result name="error">home.jsp</result>
		<result name="input">cart.jsp</result>
	</action>


<!-- 伊藤  カート画面へ -->

	<action name="CartAction" class="com.internousdev.leisurepass.action.CartAction" method="execute">
		<result name="success">cart.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 伊藤  カートに入っている項目の削除 -->

 	<action name="DeleteCartAction" class="com.internousdev.leisurepass.action.DeleteCartAction" method="execute">
		<result name="success">cart.jsp</result>
		<result name="error">cart.jsp</result>
	</action>


<!-- 北中  決済確認画面へ　送り先を指定 (login.jsp→山本久保田) -->

 	<action name="SettlementConfirmAction" class="com.internousdev.leisurepass.action.SettlementConfirmAction" method="execute">
		<result name="success">settlementConfirm.jsp</result>
		<result name="error">login.jsp</result>
	</action>


<!-- 北中  決済完了画面へ -->

  	<action name="SettlementCompleteAction" class="com.internousdev.leisurepass.action.SettlementCompleteAction" method="execute">
		<result name="success">settlementComplete.jsp</result>
		<result name="error">settlementConfirm.jsp</result>
	</action>


<!-- 根岸  宛先情報入力画面へ (home.jsp→遠藤)-->

	<action name="CreateDestinationAction" class="com.internousdev.leisurepass.action.CreateDestinationAction" method="execute">
		<result name="success">createDestination.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 根岸  宛先情報確認画面へ  入力した内容を表示 -->

	<action name="CreateDestinationConfirmAction" class="com.internousdev.leisurepass.action.CreateDestinationConfirmAction" method="execute">
		<result name="success">createDestinationConfirm.jsp</result>
		<result name="error">createDestination.jsp</result>
	</action>


<!-- 根岸  宛先情報完了画面へ  -->

	<action name="CreateDestinationCompleteAction" class="com.internousdev.leisurepass.action.CreateDestinationCompleteAction" method="execute">
		<result name="success">createDestinationComplete.jsp</result>
		<result name="error">createDestination.jsp</result>
	</action>


<!-- 横山  マイページへ -->

	<action name="MypageAction" class="com.internousdev.leisurepass.action.MypageAction" method="execute">
		<result name="success">mypage.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 山本  マイページから購入履歴へ -->

	<action name="PurchaseHistoryAction" class="com.internousdev.leisurepass.action.PurchaseHistoryAction" method="execute">
		<result name="success">purchaseHistory.jsp</result>
	</action>


<!-- 山本  購入履歴を削除 -->

	<action name="DeletePurchaseHistoryAction" class="com.internousdev.leisurepass.action.DeletePurchaseHistoryAction" method="execute">
		<result name="success">purchaseHistory.jsp</result>
		<result name="error">purchaseHistory.jsp</result>
	</action>



	</package>
</struts>