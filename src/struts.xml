<struts>
	<constant name="struts.ui.theme" value="simple" />
	<!-- 開発者モード(デバッグしたい時にはコメント外してください。ユーザーのエラーページが無効にできます) -->
	<!-- <constant name="struts.devMode" value="true" />  -->
	<package name="com.internousdev.leisurepass.action" extends="struts-default">




<!-- 遠藤  ホーム画面へ -->

	<action name="HomeAction" class="com.internousdev.leisurepass.action.HomeAction" method="execute">
		<result name="success">home.jsp</result>
	</action>



<!-- 黄  ログアウトしてリダイレクト-->

	<action name="LogoutAction" class="com.internousdev.leisurepass.action.LogoutAction" method="execute">
		<result name="success">index.jsp</result>
		<result name="error">index.jsp</result>
	</action>



<!-- 遠藤  商品検索をして商品一覧へ (productList.jsp→横山)-->

  	<action name="SearchItemAction" class="com.internousdev.leisurepass.action.SearchItemAction" method="execute">
		<result name="success">productList.jsp</result>
		<result name="error">productList.jsp</result>
	</action>



<!-- 山本・久保田  ログイン画面へ (home.jsp→遠藤) -->

	<action name="GoLoginAction" class="com.internousdev.leisurepass.action.GoLoginAction" method="execute">
		<result name="success">login.jsp</result>
		<result name="error">home.jsp</result>
	</action>


<!-- 山本・久保田  ゲストIDでログインをしてホームへ、買物中なら決済確認画面へ (settlementConfirm.jsp→北中)-->

	<action name="LoginAction" class="com.internousdev.leisurepass.action.LoginAction" method="execute">
		<result name="success">home.jsp</result>
		<result name="admin">admin.jsp</result>
		<result name="settlement">settlementConfirm.jsp</result>
		<result name="error">login.jsp</result>
	</action>


